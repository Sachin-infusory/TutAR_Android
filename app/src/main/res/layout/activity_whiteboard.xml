<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3A3A"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.whiteboard.WhiteboardActivity">

    <!-- Surface View for camera preview -->
    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Status bar with time - Highest elevation for top layer -->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_flash"
        android:elevation="300dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:52 AM"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="16/09/2025, Tuesday"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Left side buttons - Very high elevation to stay on top -->
    <LinearLayout
        android:id="@+id/left_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:elevation="250dp"
        android:orientation="vertical">

        <!-- Flash Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_draw"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Flash"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Timer Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_ar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_timer"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Timer"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Grid Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_grid"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Grid"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Effects Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_effects"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Effects"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Person Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_person"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Person"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Settings Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Download Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_download"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Download"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Add Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Add"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Menu Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Right side buttons - Very high elevation to stay on top -->
    <LinearLayout
        android:id="@+id/right_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:elevation="250dp"
        android:orientation="vertical">

        <!-- All right buttons with same structure as left but with 260dp elevation -->
        <!-- ... (keeping all your existing right buttons but adding elevation="260dp" to each ImageButton) -->

        <!-- Flash Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_flash_rt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Flash"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Add Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/btn_add_rt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Add"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Menu Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_menu_rt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circular_button_background"
                android:src="@drawable/ic_flash"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:elevation="260dp"
                app:tint="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:elevation="250dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>